<UserControl x:Class="NugetPublisher.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NugetPublisher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450" >
    <Grid DataContext="{Binding ElementName=root}">
        <Border CornerRadius="8" Margin="15"  Visibility="{Binding Visibility}">
        <Border.Background>
            <ImageBrush ImageSource="Assets\wait.jpg" 
                        Stretch="Fill" />
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="#894F3B" 
                              BlurRadius="10" 
                              Opacity="0.75" 
                              ShadowDepth="15" />
        </Border.Effect>

        <TextBlock FontSize="40"
                   FontFamily="Bauhaus 93"
                   Foreground="White"
                   Margin="10,178,10,22"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="Please Wait...">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" />
            </TextBlock.Effect>
        </TextBlock>
    </Border>
    </Grid>
</UserControl>
